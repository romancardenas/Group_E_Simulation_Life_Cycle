{
    "output": "../data/demo_1/output",
    "data_sources": [{
            "id": "db_ottawa",
            "path": "../data/demo_1/input/DB_Ottawa_Simple.geojson"
        }, {
            "id": "vicinities_ottawa",
            "path": "../data/demo_1/input/DB_Ottawa_Vicinities_Simple.geojson"
        }
    ],
    "spatial_analysis": [{
            "id": "db_centroids",
            "operation": "centroids",
            "parameters": {
                "data": "db_ottawa"
            }
        }, {
            "id": "db_distance",
            "operation": "closest_distance",
            "parameters": {
                "origin": "db_centroids",
                "destination": "db_centroids",
                "number_of_neighbors": 2
            }
        }
    ],
    "simulation": {
        "model_id": "2_2_agent_sir_config",
        "default_config": {
            "cell_type": "sir",
            "delay": "hybrid",
            "state": {
                "population": 100,
                "susceptible": 0.99,
                "infected": 0.01,
                "recovered": 0
            },
            "config": {
                "virulence": 0.4,
                "recovery": 0.6
            }
        },
        "cells": [{
                "source": "db_ottawa",
                "cell_id": "dbuid",
                "state": {
                    "population": "id"
                }
            }
        ],
        "vicinities": {
            "source": "vicinities_ottawa",
            "from": "from",
            "to": "to",
            "vicinity": {
                "connectivity": "conn",
                "mobility": "mob"
            }
        }
    },
    "conversion": {
        "fields": "[\"field_1\",\"field_2\",\"field_3\",\"field_4\"]"
    },
    "visualization": {
        "basemap": "openstreetmap",
        "view": {
            "center": [-75.7, 52.3],
            "zoom": 5
        },
        "layers": [{
                "id": "toy-model",
                "type": "polygon",
                "file": "../data/demo_1/input/toy-model.geojson",
                "label": "Toy Model",
                "style": "default",
                "model": "pandemic",
                "join": "toy"
            }
        ],
        "simulation": [{
                "name": "Toy-Model 1",
                "layer": "toy-model",
                "fill": {
                    "type": "equivalent",
                    "property": "field_1",
                    "colors": ["rgba(215,48,39,0.85)", "rgba(244,109,67,0.85)", "rgba(253,174,97,0.85)", "rgba(254,224,144,0.85)", "rgba(255,255,191,0.85)", "rgba(224,243,248,0.85)", "rgba(171,217,233,0.85)", "rgba(116,173,209,0.85)", "rgba(69,117,180,0.85)"]
                },
                "stroke": {
                    "type": "static",
                    "width": 1,
                    "color": "rgba(0,0,0,1)"
                }
            }, {
                "name": "Toy-Model 2",
                "layer": "toy-model",
                "fill": {
                    "type": "quantile",
                    "property": "field_1",
                    "colors": ["rgba(140,81,10,0.85)", "rgba(191,129,45,0.85)", "rgba(223,194,125,0.85)", "rgba(246,232,195,0.85)", "rgba(245,245,245,0.85)", "rgba(199,234,229,0.85)", "rgba(128,205,193,0.85)", "rgba(53,151,143,0.85)", "rgba(1,102,94,0.85)"]
                },
                "stroke": {
                    "type": "static",
                    "width": 1,
                    "color": "rgba(0,0,0,1)"
                }
            }
        ]
    }
}
